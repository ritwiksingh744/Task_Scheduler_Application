@using Task_Scheduler_App.Models.Model
@model ViewModel
@{
    ViewData["Title"] = "ShowBirthdayList";
}

<div class="container bg-white shadow-sm p-3">
    <h3 class="text-black-50"><i class="bi bi-clipboard2-pulse-fill me-3"></i>Birthday People List</h3>
    <hr />
    <table class="table table-striped">
        <thead>
            <tr>
                <th></th>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>BirthDay (dd/MM)</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.BirthDayList.Any())
            {
                foreach (var item in Model.BirthDayList)
                {
                    <tr>
                        <td></td>
                        <td>@item.Id</td>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Email</td>
                        <td>@item.BirthDay/@item.BirthMonth</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" style="text-align:center;"><i class="fa-solid fa-triangle-exclamation"></i>&nbsp; No data</td>
                </tr>
            }
        </tbody>
    </table>
</div>

