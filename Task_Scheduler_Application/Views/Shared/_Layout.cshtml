<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
    <title>@ViewData["Title"] - Task Scheduler</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Source+Code+Pro:wght@500&family=Source+Sans+Pro:ital,wght@0,400;0,600;0,700;1,400&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/6725c39b19.js" crossorigin="anonymous"></script>
</head>
<body style="font-family: 'Source Sans Pro', sans-serif;">
    <!--Main Navigation-->
    <header>
        <!-- Sidebar -->
        <nav id="sidebarMenu"
             class="collapse d-lg-block sidebar collapse bg-white" style="background-image: linear-gradient( rgba(151,69,198,0.5690651260504201) 35%, rgba(0,146,255,0.5550595238095238) 100%);">
            <div class="position-sticky" style="background-color: transparent;">
                <div class="list-group list-group-flush mx-3 mt-4" style="background-color: transparent;">
                    <a role="button" onclick="loader.RedirectToHome()" style="background-color: transparent; color: white;"
                       class="list-group-item list-group-item-action py-2 ripple"
                       aria-current="true">
                        <i class="fas fa-tachometer-alt fa-fw me-3"></i><span>Dashboard</span>
                    </a>
                    <a role="button" onclick="loader.RedirectToList()" style="background-color: transparent; color: white;"
                       class="list-group-item list-group-item-action py-2 ripple">
                        <i class="fa-solid fa-clipboard-list fa-fw me-3"></i><span>Task List</span>
                    </a>
                    <a role="button" onclick="loader.RedirectToAddJob()" style="background-color: transparent; color: white;"
                       class="list-group-item list-group-item-action py-2 ripple">
                        <i class="fa-solid fa-business-time fa-fw me-3"></i><span>Add Job</span>
                    </a>
                    <a role="button" onclick="loader.RedirectToAddBirthDayPeople()" style="background-color: transparent; color: white;"
                       class="list-group-item list-group-item-action py-2 ripple">
                        <i class="fa-solid fa-cake-candles fa-fw me-3"></i><span>Add Birthday</span>
                    </a>
                    <a role="button" onclick="loader.RedirectToBirthdayPeopleList()" style="background-color: transparent; color: white;"
                       class="list-group-item list-group-item-action py-2 ripple">
                        <i class="fa-solid fa-person"></i><i class="fa-solid fa-person me-3"></i><span>Birthday List</span>
                    </a>
                    @*<a href="#" style="background-color: transparent; color: white;"
                       class="list-group-item list-group-item-action py-2 ripple">
                        <i class="fas fa-chart-pie fa-fw me-3"></i><span>Track a Job</span>
                    </a>*@

                </div>
            </div>
        </nav>
        <!-- Sidebar -->
        <!-- Navbar -->
        <nav id="main-navbar" style="background: white;"
             class="navbar navbar-expand-lg navbar-light  fixed-top shadow-sm shadow-sm">
            <!-- Container wrapper -->
            <div class="container-fluid">
                <!-- Toggle button -->
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#sidebarMenu"
                        aria-controls="sidebarMenu"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>

                <!-- Brand -->
                <a role="button" class="navbar-brand d-inline-block" style="font-family: 'Source Sans Pro', sans-serif;" onclick="loader.RedirectToHome()">
                    <img src="~/TSA_logo.png"
                         height="40"
                         alt=""
                         loading="lazy" /><Text style="color: dodgerblue;font-weight:bold;">Task Scheduler</Text>
                </a>
                <!-- Search form -->
                <form class="d-none d-md-flex input-group w-auto my-auto ms-2">
                    <input autocomplete="off"
                           type="search"
                           class="form-control rounded"
                           placeholder='Search (ctrl + "/" to focus)'
                           style="min-width: 225px" />
                    <span class="input-group-text border-0">
                        <i class="fas fa-search"></i>
                    </span>
                </form>

                <!-- Right links -->
                <ul class="navbar-nav ms-auto d-flex flex-row">
                    <!-- Notification dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link me-3 me-lg-0 dropdown-bs-toggle hidden-arrow"
                           href="#"
                           id="navbarDropdownMenuLink"
                           role="button"
                           data-bs-toggle="dropdown"
                           aria-expanded="false">
                            <i class="fas fa-bell"></i>
                            <!--notification count-->
                            <span class="badge rounded-pill badge-notification bg-danger"></span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end"
                            aria-labelledby="navbarDropdownMenuLink">
                            <li><a class="dropdown-item" href="#">Some news</a></li>
                            <li><a class="dropdown-item" href="#">Another news</a></li>
                            <li>
                                <a class="dropdown-item" href="#">Something else here</a>
                            </li>
                        </ul>
                    </li>

                    <!-- Avatar -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle hidden-arrow d-flex align-items-center"
                           href="#"
                           id="navbarDropdownMenuLink"
                           role="button"
                           data-bs-toggle="dropdown"
                           aria-expanded="false">
                            <img src="https://png.pngtree.com/element_our/20190604/ourmid/pngtree-user-avatar-boy-image_1482937.jpg"
                                 class="rounded-circle"
                                 height="22"
                                 alt=""
                                 loading="lazy" />
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end"
                            aria-labelledby="navbarDropdownMenuLink">
                            <li><a class="dropdown-item" href="#">My profile</a></li>
                            <li><a class="dropdown-item" href="#">Settings</a></li>
                            <li><a class="dropdown-item" href="#">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <!-- Container wrapper -->
        </nav>
        <!-- Navbar -->
    </header>
    <!--Main Navigation-->
    <!--Main layout-->
    <main style="margin-top: 70px" class="pb-3">
        @RenderBody()
    </main>
    @*<footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - GenericScheduler - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>*@

    <!-- import jquery cdn -->
    <script src="https://code.jquery.com/jquery-3.6.3.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/4236f2353f.js" crossorigin="anonymous"></script>
    <script src="~/js/loaderBody.js"></script>
    <script>
        var loader = ContentLoader();
        $(document).ready(function(){
            loader.onInit();
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>



